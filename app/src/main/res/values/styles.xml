<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Progress.Bar.Widget" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="customHeight">@dimen/custom_progress_bar_height</item>
        <item name="radius">@dimen/custom_progress_bar_radius</item>
        <item name="paddingLeft">@dimen/custom_progress_bar_padding_left</item>
        <item name="textBottomPadding">@dimen/custom_progress_bar_text_padding_bottom</item>
        <item name="textSize">@dimen/custom_progress_bar_text_size</item>
        <item name="mainColor">@color/progressMainColor</item>
        <item name="progressColor">@color/progressProgressColor</item>
    </style>

</resources>
